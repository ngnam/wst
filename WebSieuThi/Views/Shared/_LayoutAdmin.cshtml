                            <li>
                                <a href="#"><i class="fa fa-bell-o fa-fw"></i> Quản lý sự kiện, thông báo <span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li><a href="/admin/hethong/themsukien">Thêm sự kiện</a></li>
                                    <li><a href="/admin/hethong/dssukien">Danh sách sự kiện</a></li>
                                    @*<li><a href="#">Gửi thông báo</a></li>
                                        <li><a href="#">Danh sách thông báo</a></li>*@
                                </ul>
                            </li>

                        }
