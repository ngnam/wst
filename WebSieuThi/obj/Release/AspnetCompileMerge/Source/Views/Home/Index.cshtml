@model List<WebSieuThi.Models.HeThong>
@{
    ViewBag.Title = "Trang chủ";
}

<!-- Title -->
<div class="row">
    <div class="col-lg-12">
        <div class="page-header" style="border-color: #148c00;">
            <h3>Danh sách hệ thống siêu thị đang sử dụng</h3>
        </div>
    </div>
</div>
<!-- /.row -->

<div class="row text-center">
    @if (Model != null)
    {
        if (Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail hero-1">
                        <img src="@item.AnhIcon">
                        <div class="caption">
                            <h3>@item.TenHeThong</h3>
                        </div>
                    </div>
                </div>
            }
        }
    }
    
</div>